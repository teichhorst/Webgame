<% @pets.each do |p| %>
<%= p.display_name %>
<br>
Health: <%= p.health %>
<br>
Damage: <%= p.min_damage %> - <%= p.max_damage %>
<br>
Speed: <%= p.min_speed %> - <%= p.max_speed %>
<br>
Block: <%= p.min_block %> - <%= p.max_block %>
<br>
Cost: <%= p.buy %>
<br>
Resale Value: <%= p.sell %>
<br><br>

<% if current_user.gold >= p.buy %>
<%= link_to 'Buy', buy_pet_path(p) %> 
<% else %>
Buy
<% end %>

