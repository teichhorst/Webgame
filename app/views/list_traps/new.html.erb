<%= form_for @list_trap, :html => { :multipart => true } do |t| %>
  
    Display Name: <%= t.text_field :display_name, :placeholder => "Name that people will see..." %>
    Description: <%= t.text_area :description, :placeholder => "A paragraph about the trap..." %><br>
    Health: <%= t.text_field :health, :placeholder => "Health trap will start with." %><br>
    Minimum Block Roll: <%= t.text_field :min_block, :placeholder => "ex.. 8, or 1 + rand(10)" %><br>
    Maximum Block Roll: <%= t.text_field :max_block, :placeholder => "Must be higher than min!" %><br>
    Minimum Damage Roll: <%= t.text_field :min_damage, :placeholder => "ex.. 8, or 1 + rand(10)" %><br>
    Maximum Damage Roll: <%= t.text_field :max_damage, :placeholder => "Must be higher than min!" %><br>
    Minimum Speed Roll: <%= t.text_field :min_speed, :placeholder => "ex.. 8, or 1 + rand(10)" %><br>
    Maximum Speed Roll: <%= t.text_field :max_speed, :placeholder => "Must be higher than min!" %><br>
    
    Odds: <%= t.text_field :odds, :placeholder => "1 - 1000000" %><br>
    
    Image: <%= t.file_field :trap_image %>
    
  <%= t.submit "Create trap", :list_trap => @list_trap, :class => "btn btn-large btn-primary" %>

<% end %>
