
<div class='title'></div>

<div class='session_container'>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  
  	<div class='row' style='width: 460px;'>
	 	<div class='email_input'>
	 		Email
	  	<%= f.email_field :email, :class => 'text_field' %></div>
	
	  	<div class='password_input'>
	  		Password
	  	<%= f.password_field :password, :class => 'text_field' %></div>
	</div>

	<div class='row' style='width: 460px;'>
	  	<% if devise_mapping.rememberable? -%>
	    	<div class='sign_in_submit'><%= f.check_box :remember_me %> <%= f.label :remember_me %>
	  	<% end -%>
			<br>
	  	<%= f.submit "Sign In", :class => 'button' %></div>
		<% end %>

		<div class='sign_in_links'>
		<%= render "devise/shared/links" %>
		</div>
	</div>
	
	

</div>
