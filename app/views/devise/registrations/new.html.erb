<div class='title'></div>

<div class='session_container'>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

	<div class='row' style='width: 920px;'>
	  <div class='email_input'>Email
	  <%= f.email_field :email, :class => 'text_field' %></div>
	  
	  <div class='display_name_input'>Display Name
	  	<%= f.text_field :display_name, :class => 'text_field' %></div>
	
	  <div class='password_input'>Password
	  <%= f.password_field :password, :class => 'text_field' %></div>
	
	  <div class='confirm_password_input'>Confirm Password
	  <%= f.password_field :password_confirmation, :class => 'text_field' %></div>
	  </div>
	<div class='row' style='width: 460px;'>
	  <div class='sign_in_submit'><%= f.submit "Sign Up", :class => 'button' %></div>
	<% end %>
	<div class='sign_in_links'>
	<%= render "devise/shared/links" %>
	</div>

</div>
</div>
