<%= link_to 'Create New ring', new_list_ring_path %><br><br>

<% if @list_rings != nil %>
<table width='900px'>
	<tr>
		<td>
			ID
		</td>
		<td>
			Display Name
		</td> 
		<td>
			Description
		</td> 
		<td>
			Min Speed
		</td> 
		<td>
			Max Speed
		</td> 
		<td>
			Min Damage
		</td> 
		<td>
			Max Damage
		</td> 
		<td>
			Min Block
		</td> 
		<td>
			Max Block
		</td> 
		<td>
			Odds
		</td> 
		<td>
			Image
		</td>
	</tr>
	

<% @list_rings.each do |r| %>

	<tr>
		
			
		
		<td>
			<%= r.id %>
		</td>
		<td>
			<%= r.display_name %>
		</td> 
		<td>
			<%= r.description %>
		</td> 
		<td>
			<%= r.min_speed %>
		</td> 
		<td>
			<%= r.max_speed %>
		</td> 
		<td>
			<%= r.min_damage %>
		</td> 
		<td>
			<%= r.max_damage %>
		</td> 
		<td>
			<%= r.min_block %>
		</td> 
		<td>
			<%= r.max_block %>
		</td>  
		<td>
			<%= r.odds %>
		</td> 
		<td>
			<%= image_tag r.ring_image %>
		</td>
	</tr>
	<tr>
		<td>
			<%= link_to 'Edit', edit_list_ring_path(r)%>
		</td>
		<td>
			<%= link_to 'Delete', list_ring_path(r), :method => :delete%>
		</td>
	</tr>
<% end %>
	</table>
<% else %>
 No rings Yet!
 <% end %>
