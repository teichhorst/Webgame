<%= form_for @list_ring, :html => { :multipart => true } do |r| %>
  
    Display Name: <%= r.text_field :display_name, :placeholder => "Name that people will see..." %>
    Description: <%= r.text_area :description, :placeholder => "A paragraph about the ring..." %><br>
    Minimum Block Roll: <%= r.text_field :min_block, :placeholder => "ex.. 8, or 1 + rand(10)" %><br>
    Maximum Block Roll: <%= r.text_field :max_block, :placeholder => "Must be higher than min!" %><br>
    Minimum Damage Roll: <%= r.text_field :min_damage, :placeholder => "ex.. 8, or 1 + rand(10)" %><br>
    Maximum Damage Roll: <%= r.text_field :max_damage, :placeholder => "Must be higher than min!" %><br>
    Minimum Speed Roll: <%= r.text_field :min_speed, :placeholder => "ex.. 8, or 1 + rand(10)" %><br>
    Maximum Speed Roll: <%= r.text_field :max_speed, :placeholder => "Must be higher than min!" %><br>
    
    Odds: <%= r.text_field :odds, :placeholder => "1 - 1000000" %><br>
    
    Image: <%= r.file_field :ring_image %>
    
  <%= r.submit "Create ring", :list_ring => @list_ring, :class => "btn btn-large btn-primary" %>

<% end %>
